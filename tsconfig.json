{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "umd",
    "moduleResolution": "node",
    "rootDir": "./source",
    "outDir": "./build",
    "inlineSourceMap": true,
    "sourceMap": true,
    "declarationDir": "./build/@types/web-audio-api-player",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [ "es5", "dom", "es2015" ],
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "examples"
  ]
}
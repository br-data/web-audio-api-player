{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "umd",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "sourceMap": true,
    "declarationDir": "./definitions",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {

    },
    "lib": [ "es5", "es2015" ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "examples"
  ]
}